<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Un titulo">

        <EditTextPreference
            android:defaultValue="Default value"
            android:inputType="number"
            android:key="editTextPreferenceKey"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Edit text preference"
            app:summary="Resumen de la preferencia" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="check_box_preference_1"
            android:title="Check box preference"
            app:summary="ejemplo" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="switchPreferenceKey"
            android:title="Switch preference" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/unidades_entries"
            android:entryValues="@array/unidades_values"
            android:key="list_preference"
            android:title="List preference" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/unidades_entries_fondo"
            android:entryValues="@array/unidades_values_fondo"
            android:key="temafondo"
            android:title="Tema de fondo" />
    </PreferenceCategory>
</PreferenceScreen>